{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2015",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "include": ["./src/**/*.ts", "./config.json"],
  "exclude": ["./node_modules/**/*"]
}
